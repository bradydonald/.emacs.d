  :PROPERTIES:
  :ARCHIVE_TIME: 2021-09-18 Sat 07:14
  :ARCHIVE_FILE: ~/.emacs.d/configuration.org
  :ARCHIVE_OLPATH: Org Mode/Personal and Work Toggle
  :ARCHIVE_CATEGORY: configuration
